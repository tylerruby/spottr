.container-fluid
  .row{:style => "margin-top:20px;"}
    .col-md-3.col-md-offset-1
      .panel.panel-default
        .panel-body
          .row
            .col-md-6.col-sm-4.col-xs-4
              %img.img-responsive{:src => @user.image.url(:medium), :class => "img-thumbnail"}
            .col-md-6
              %h3= @user.name
              // Amounts of dishes and places user likes
              %h5
                = @user.votes.where(votable_type: "Place").count
                Places liked
              %h5
                = @user.votes.where(votable_type: "MenuItem").count
                Dishes liked
      .panel.panel-default
        .panel-heading
          %h3.panel-title Places
        .panel-body
          - @user.places.each do |place|
            = link_to place do
              = image_tag place.image.url(:thumb)
      .panel.panel-default
        .panel-heading
          %h3.panel-title Dishes
        .panel-body
          - @user.menu_items.each do |mi|
            - place = mi.place
            = link_to place do
              = image_tag mi.image.url(:thumb)
    .col-md-6
      .panel.panel-default{:style => "height:390px;"}
        .panel-body
          .col-md-12
            .panel.panel-default
              .panel-heading
                %h3.panel-title
                  = "#{@user.first_name}'s"
                  Favorites
              %table#task-table.table.table-hover
                %thead
                  %tr
                    %th Rank
                    %th Places
                    %th Distance
                    %th Price

= render 'preload_images'
.container-fluid
  .row
    .col-sm-7
      .panel.panel-default
        .panel-body.test
          .panel-title{:style => "font-size:22px; padding-bottom:-1px; margin-left:10px;"}
            %img{:src => "http://i.imgur.com/rDLxYAO.png", :style => "width:30px;"}
            = current_city
          %div{:style => "width: 100%"}
            #map
    .col-sm-5
      .panel.panel-default.map-control-panel
        .panel-heading
          .row
            .col-md-12
              .btn-group
                %button.btn.btn-primary.btn-outline.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
                  Month
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "#"} Today
                  %li
                    %a{:href => "#"} Week
                  %li
                    %a{:href => "#"} Month
                  %li
                    %a{:href => "#"} Year
                  %li.divider
                  %li
                    %a{:href => "#"} All
              %button.btn.btn-default.btn-outline New
              %button.btn.btn-success.btn-outline Open
              %button.btn.btn-danger.btn-outline.fa.fa-cutlery.pull-right
              %button.btn.btn-warning.btn-outline.fa.fa-beer.pull-right
              %button.btn.btn-info.btn-outline.fa.fa-music.pull-right
        .panel-body
          %table.table.table-condensed#places-table
          %a.btn.btn-default.js-more-places.hidden Load More

- content_for :scripts do
  :javascript
    window.latitude = #{@lat};
    window.longitude = #{@long};

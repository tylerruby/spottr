= render 'preload_images'
.container-fluid
  .row
    .col-sm-7{:style => "padding-left:0px;padding-right:0px;"}
      .panel.panel-default
        %div{:style => "width: 100%"}
          #map
    .col-sm-5{:style => "padding-left:0px;padding-right:0px;"}
      .panel.panel-default.map-control-panel
        .panel-heading
          .row
            .col-md-12
              = render 'shared/controls/time_mode_select'
              .pull-right
                = render 'shared/controls/cuisine_select'
        .panel-body{:style => "padding:0px;"}
          %table.table.table-condensed.js-dynamic-table#places-table
          %a.btn.btn-default.btn-block.js-more-places.hidden{:style => "margin-left:10px;margin-bottom:10px;"} Load More

= render 'shared/places_row_template'
- content_for :scripts do
  :javascript
    window.latitude = #{@lat};
    window.longitude = #{@long};

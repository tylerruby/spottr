.container-fluid
  .row
    .col-md-4.col-md-offset-1
      .panel.panel-default
        .panel-body{:style => "padding:0;"}
          .row
            .col-md-6
              = image_tag @place.image.url(:thumb), class: 'img-responsive'
            .col-md-5
              %h4
                %span.label.label-success.pull-right Open
                = @place.title.classify
              %h5= @place.address
              %h4
                - href = "http://maps.google.com/?saddr=#{@lat},#{@long}&daddr=#{@place.latitude},#{@place.longitude}"
                %a.btn.btn-sm.btn-default.btn-outline.fa.fa-car.pull-right{:href=> href, :target => "_blank"}
                Type:
                %a{:href => "http://www.google.com"}
                  = @place.kind.titleize
      .panel.panel-default
        .panel-body{:style => "padding:0;"}
          .row
            .col-md-12
              #place-map{style: "height: 400px;"}
              :javascript
                function init() {
                  var currentLatLng = new google.maps.LatLng(#{@lat}, #{@long});
                  var latLng = new google.maps.LatLng(#{@place.latitude}, #{@place.longitude});
                  var mapOptions = {
                    center: latLng,
                    zoom: 14
                  }
                  var map = new google.maps.Map(document.getElementById('place-map'),
                    mapOptions);
                  var marker = new google.maps.Marker({
                    position: latLng,
                    map: map,
                    title: "#{@place.title}"
                  });
                }
                google.maps.event.addDomListener(window, 'load', init);
      .panel.panel-default
        .panel-heading
          %h3.panel-title People that like this place
        .panel-body
          %img{:src => "http://i.imgur.com/TFwKwId.png", :style => "width:50px; height:50px;"}/
          %img{:src => "http://i.imgur.com/x3GGS4h.png", :style => "width:50px; height:50px;"}/

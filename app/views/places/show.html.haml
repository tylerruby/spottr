.container-fluid
  .row
    .col-md-4.col-md-offset-1
      .panel.panel-default
        .panel-body{:style => "padding:0;"}
          .row
            .col-md-6
              = image_tag @place.image.url(:thumb), class: 'img-responsive'
            .col-md-5
              %h4
                %span.label.label-success.pull-right Open
                = @place.title.classify
              %h5= @place.address
              %h4
                - href = "http://maps.google.com/?saddr=#{@lat},#{@long}&daddr=#{@place.latitude},#{@place.longitude}"
                %a.btn.btn-sm.btn-default.btn-outline.fa.fa-car.pull-right{:href=> href, :target => "_blank"}
                Type:
                %a{:href => "http://www.google.com"}
                  = @place.kind.titleize
      .panel.panel-default
        .panel-body{:style => "padding:0;"}
          .row
            .col-md-12
              #place-map{style: "height: 400px;"}
              :javascript
                function init() {
                  var currentLatLng = new google.maps.LatLng(#{@lat}, #{@long});
                  var latLng = new google.maps.LatLng(#{@place.latitude}, #{@place.longitude});
                  var mapOptions = {
                    center: latLng,
                    zoom: 14
                  }
                  var map = new google.maps.Map(document.getElementById('place-map'),
                    mapOptions);
                  var marker = new google.maps.Marker({
                    position: latLng,
                    map: map,
                    title: "#{@place.title}"
                  });
                }
                google.maps.event.addDomListener(window, 'load', init);
      .panel.panel-default
        .panel-heading
          %h3.panel-title People that like this place
        .panel-body
          %img{:src => "http://i.imgur.com/TFwKwId.png", :style => "width:50px; height:50px;"}/
          %img{:src => "http://i.imgur.com/x3GGS4h.png", :style => "width:50px; height:50px;"}/
    .col-md-5
      .panel.panel-default
        .panel-body{:style => "padding:0;"}
          = image_tag @place.image.url(:medium), class: 'img-responsive'
        .panel-body{:style => "padding:5px;"}
          %img{:src => "http://placehold.it/70x70"}
          %img{:src => "http://placehold.it/70x70"}
          %img{:src => "http://placehold.it/70x70"}
          %img{:src => "http://placehold.it/70x70"}
    .col-md-5
      .panel.panel-default.map-control-panel
        .panel-heading
          .row
            .col-md-12
              .btn-group.date-mode-select
                %button.btn.btn-primary.btn-outline.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
                  %span.text Month
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{data: {mode: 'day'}} Today
                  %li
                    %a{data: {mode: 'week'}} Week
                  %li
                    %a{data: {mode: 'month'}} Month
                  %li
                    %a{data: {mode: 'year'}} Year
                  %li.divider
                  %li
                    %a{data: {mode: 'all'}} All
              %button.btn.btn-default.btn-outline New
        .panel-body
          %table.table
            %tbody
              - if @place.comments.count == 0
                %tr
                  %td{colspan: 3}
                    %em.text-grey No comments yet
              - @place.comments.each do |comment|
                %tr
                  %td{:style => "border-top:none;"} 1
                  %td{:style => "border-top:none;"}
                    %strong= comment.user.email
                  %td{:style => "border-top:none;"}= comment.comment
        .panel-footer
          = form_for [@place, Comment.new], html: {class: 'form'} do |f|
            .form-group
              = f.text_area :comment, class: 'form-control'
            .form-group
              = f.submit "Comment", class: 'btn btn-primary'

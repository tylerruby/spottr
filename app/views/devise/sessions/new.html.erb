<body class="login">
	<div class="container">
	  <div class="row" style="padding-top:50px;">
			<div class="col-md-4 col-md-offset-4">
	    		<div class="panel panel-default">
				  	<div class="panel-heading">
				    	<h3 class="panel-title">Sign in</h3>
				 	</div>
				  	<div class="panel-body">
	            <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-outline btn-primary btn-lg btn-block" %>
	            <h5 class="text-center">Or</h5>
				    	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	              <fieldset>
				    	  	<div class="form-group">
				    		    <%= f.email_field :email, :placeholder => "Email",autofocus: true, class: "form-control" %>
				    		</div>
				    		<div class="form-group">
				    			<%= f.password_field :password, :placeholder => "Password", autocomplete: "off", class: "form-control" %>
				    		</div>
				    		<div class="checkbox">
				    	    	<label>
				    	    		<% if devise_mapping.rememberable? -%>
	    									<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  									<% end -%>
				    	    	</label>
				    	    </div>
				    		<%= f.submit "Sign in", class: "btn btn-lg btn-success btn-block" %>
				    		</fieldset>
				      <% end %>
				      <br />
				      <%= render "devise/shared/links" %>
				    </div>
				</div>
			</div>
		</div>
	</div>
</body>
